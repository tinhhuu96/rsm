<%= javascript_include_tag "format_datepicker", "data-turbolinks-track": "reload" %>
<div id= "new-certificate">
  <%= simple_form_for @certificate, html: {class: "new-section"}, remote: true do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :name, class: "profile_label" do %>
            <strong class="text-red">*</strong><%= t "certificate.name" %>
          <% end %>
          <%= f.text_field :name, autofocus: true, class: "form-control edit-control",
            placeholder: (t"certificate.plcname") %>
          <span class="certificate-name-invalid error-message"></span>
        </div>
        <span class="error-message">
          <%= f.error :name %>
        </span>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :majors, class: "profile_label" do %>
            <strong class="text-red">*</strong><%= t "certificate.major" %>
          <% end %>
          <%= f.text_field :majors, autofocus: true, class: "form-control edit-control",
            placeholder: (t"certificate.plcmajor") %>
          <span class="certificate-majors-invalid error-message"></span>
        </div>
        <span class="error-message">
          <%= f.error :majors %>
        </span>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= f.label :organization, class: "profile_label" do %>
            <strong class="text-red">*</strong><%= t "certificate.organization" %>
          <% end %>
          <%= f.text_field :organization, autofocus: true, class: "form-control edit-control",
            placeholder: (t"certificate.plcorganization") %>
          <span class="certificate-organization-invalid error-message"></span>
        </div>
        <span class="error-message">
          <%= f.error :organization %>
        </span>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :classification, class: "profile_label" do %>
            <strong class="text-red">*</strong><%= t "certificate.classification" %>
          <% end %>
          <%= f.text_field :classification, autofocus: true, class: "form-control edit-control",
            placeholder: (t"certificate.plcclass") %>
          <span class="certificate-classification-invalid error-message"></span>
        </div>
        <span class="error-message">
          <%= f.error :classification %>
        </span>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :received_time, class: "profile_label" do %>
            <strong class="text-red">*</strong><%= t "certificate.received" %>
          <% end %>
          <%= f.text_field :received_time, "data-provide": "datepicker", class: "datepick form-control edit-control" %>
          <span class="certificate-received_time-invalid error-message"></span>
        </div>
        <span class="error-message">
          <%= f.error :received_time %>
        </span>
      </div>
    </div>
    <div class="form-group push-top-md edit-field">
      <div class="col-sm-6">(<strong class="text-red">*</strong>)<%= t "achievements.required" %></div>
      <div class="row">
        <div class="col-sm-6"></div>
        <div class="col-sm-6 text-right">
          <button id="<%= define_cancel_certificate_id @certificate %>" type="button"
            class="btn-cancel btn btn-default" value="<%= @certificate.id %>" >
              <%= t "certificate.cancel" %>
          </button>
          <%= f.submit (t"certificate.save"), class: "btn-save btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

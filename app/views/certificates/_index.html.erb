<div id="certificates">
  <div class="section-detail section-employment">
    <div class="style-in">
      <fieldset>
        <div class="placeholder-certificate box-md <%= define_style_placeholder @certificates %>">
          <p class="placeholder text-center">
            <%= check_certificate @user %>
          </p>
        </div>
        <div id="form-certificate">
          <%= render partial: "certificates/certificate", collection: @certificates, as: :certificate %>
        </div>
        <% if current_user.is_user? @user %>
          <div class="row">
            <div class="col-md-5 offset-md-4"></div>
            <div class="col-md-2 offset-md-6">
              <%= link_to (t"certificate.add"), new_certificate_path,
                id: "btn-add-certificate",
                class: "btn btn-primary btn-block no-border add-one-more-section",
                remote: true %>
            </div>
          </div>
        <% end %>
        <div id = "area_form_certificate">
        </div>
      </fieldset>
    </div>
  </div>
  <div class="bot-form"></div>
</div>

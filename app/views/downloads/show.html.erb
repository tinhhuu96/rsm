 <div class="container">
  <div class="main_content">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <div class="well well-sm mainDetails">
          <div class="row">
            <div id= "show-user">
              <div class="col-sm-2 col-md-2 body-left">
                <% if @user.picture.present? %>
                  <%= show_avatar @user  %>
                <% else %>
                  <%= image_tag "avatar_2x.png", class: "img-responsive avatar_users" %>
                <% end %>
              </div>
              <div class="col-sm-10 col-md-10 body-right">
                <h4><%= @user.name %></h4>
                <table class= "table table_profile">
                  <tr>
                    <td class="view-field">
                      <strong class="view-control">
                        <span class="glyphicon glyphicon-envelope"></span> <span class="title"><%= t "users.update.email" %>:</span>
                      </strong>
                    </td>
                    <td class="profile_content"><%= @user.email %></td>
                  </tr>

                  <tr>
                    <td class="view-field">
                      <strong class="view-control">
                        <span class="glyphicon glyphicon-globe"></span> <span class="title"><%= t "users.update.address" %>:</span>
                      </strong>
                    </td>
                    <td class="profile_content"><%= @user.address %></td>
                  </tr>
                  <tr>
                    <td class="view-field">
                      <strong class="view-control">
                        <span class="glyphicon glyphicon-phone"></span> <span class="title"><%= t "users.update.phone" %>:</span>
                      </strong>
                    </td>
                    <td class="profile_content"><%= @user.phone %></td>
                  </tr>
                   <tr>
                    <td class="view-field">
                      <strong class="view-control">
                        <span class="fa fa-birthday-cake"></span> <span class="title"><%= t "users.update.birthday" %>:</span>
                      </strong>
                    </td>
                    <td class="profile_content"><%= @user.birthday %></td>
                  </tr>
                </table>
              </div>
              <div class="clear"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="quickFade delayFive ghitmodel mainArea">
      <section>
        <div class="sectionTitle">
          <h1><%= t "clubs._index.achievements" %></h1>
        </div>
        <%= render partial: "downloads/achievement", collection: @achievements, as: :achievement %>
        <div class="clear"></div>
      </section>
      <section>
        <div class="sectionTitle">
          <h1><%= t "certificate.certi" %></h1>
        </div>
        <%= render partial: "downloads/certificate", collection: @certificates, as: :certificate %>
        <div class="clear"></div>
      </section>
      <section>
        <div class="sectionTitle">
          <h1><%= t "clubs._index.club_title" %></h1>
        </div>
        <%= render partial: "downloads/club", collection: @clubs, as: :club %>
        <div class="clear"></div>
      </section>
      <section>
        <div class="sectionTitle">
          <h1><%= t "experiences._index.experience_title" %></h1>
        </div>
        <%= render partial: "downloads/experience", collection: @experiences, as: :experience %>
        <div class="clear"></div>
      </section>
    </div>
  </div>
</div>

<div id="clubs">
  <div class="section-detail section-employment">
    <div class="style-in">
      <fieldset>
        <div class="placeholder-club box-md <%= define_style_placeholder @clubs %>">
          <p class="placeholder">
            <%= check_club @user %>
          </p>
        </div>
        <div id="form-club">
          <%= render partial: "clubs/club", collection: @clubs, as: :club %>
        </div>
        <% if  current_user.is_user? @user %>
          <% if can? :update, @user %>
            <div class="row">
              <div class="col-md-5 offset-md-4"></div>
              <div class="col-md-2 offset-md-6">
                <%= link_to t("clubs._index.add"), new_club_path, id: "btn-add-club",
                  class: "btn btn-primary btn-block no-border add-one-more-section", remote: true %>
              </div>
            </div>
          <% end %>
        <% end %>
        <div id = "area_form_club">
        </div>
      </fieldset>
    </div>
  </div>
  <div class="bot-form"></div>
</div>

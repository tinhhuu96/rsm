 <header class="navbar navbar-default">
  <ul class="nav navbar-nav-custom">
      <li>
          <%= link_to "javascript:void(0)", onclick: "App.sidebar('toggle-sidebar');" do %>
            <i class="fa fa-bars fa-fw"></i>
          <% end %>
      </li>
  </ul>
  <form action="page_ready_search_results.html" method="post" class="navbar-form-custom" role="search">
      <div class="form-group">
          <input type="text" id="top-search" name="top-search" class="form-control" placeholder="<%= t "search" %>">
      </div>
  </form>
  <ul class="nav navbar-nav-custom pull-right">
    <li>
      <%= link_to "javascript:void(0)", onclick: "App.sidebar('toggle-sidebar-alt', 'toggle-other');" do %>
        <i class="gi gi-share_alt"></i>
        <span class="label label-primary label-indicator animation-floating">4</span>
      <% end %>
    </li>
    <li class="dropdown">
      <%= link_to "javascript:void(0)", class: "dropdown-toggle", data: { toggle: "dropdown"} do %>
        <%= image_tag current_user.picture.url %>
        <i class="fa fa-angle-down"></i>
      <% end %>
        <ul class="dropdown-menu dropdown-custom dropdown-menu-right">
          <li class="dropdown-header text-center"><%= t "account" %></li>
          <li>
            <%= link_to do %>
              <i class="fa fa-clock-o fa-fw pull-right"></i>
              <span class="badge pull-right">10</span>
              <%= t ".updates" %>
            <% end %>

            <%= link_to do %>
              <i class="fa fa-envelope-o fa-fw pull-right"></i>
              <span class="badge pull-right">5</span>
              <%= t ".messages" %>
            <% end %>

            <%= link_to do %>
              <i class="fa fa-magnet fa-fw pull-right"></i>
              <span class="badge pull-right">3</span>
              <%= t ".subscriptions" %>
            <% end %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to do %>
              <i class="fa fa-user fa-fw pull-right"></i>
              <%= t ".profile" %>
            <% end %>

            <%= link_to do %>
              <i class="fa fa-cog fa-fw pull-right"></i>
              <%= t ".settings" %>
            <% end %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to do %>
              <i class="fa fa-lock fa-fw pull-right"></i>
              <%= t ".lock_Account" %>
            <% end %>

            <%= link_to do %>
              <i class="fa fa-ban fa-fw pull-right"></i>
              <%= t ".logout" %>
            <% end %>
          </li>
        </ul>
    </li>
  </ul>
</header>

<tr id="member-<%= member.id%>">
  <td class="text-center"><%= member_counter + CouterIndex.couter(@page, Settings.apply.page) %></td>
  <td class="text-center visible-lg">
    <%= image_tag member.user.picture.url, class: "img_tag_member" %></td>
  <td class="text-center"><%= link_to member.user.name, user_path(member.user) %></td>
  <td class="text-center"><strong><%= member.position %></strong></td>
  <td class="text-center"><%= member.user.email %></td>
  <td class="text-center"><%= member.user.sex %></td>
  <td class="text-center"><%= member.start_time %></td>
  <td class="text-center"><%= member.end_time %></td>
  <td class="hidden-xs text-center">
    <% if member.end_time.present? %>
      <span class="label label-danger"><%= t ".resigned" %></span>
    <% else %>
      <span class="label label-info"><%= t ".working" %></span>
    <% end %>
  </td>
  <td class="text-center">
    <div class="btn-group">
      <%= link_to edit_employers_member_path(member),
        class: "btn btn-xs btn-default", remote: :true do %>
        <i class="fa fa-pencil"></i>
      <% end %>
    </div>
  </td>
</tr>

<div class="block full">
  <div class="block-title">
    <h2><strong><%= t ".add_member" %></strong></h2>
  </div>
    <%= form_tag employers_company_members_path, method: "get",
      id: "verified_search", class: "form-inline" do %>
      <%= text_field_tag :search, "", class: "form-control" %>
      <%= hidden_field_tag :checked_values, @member_checkeds %>
      <%= submit_tag t("search"), name: :nil, remote: true, class: "btn btn-primary" %>
    <% end %>

  <%= form_tag employers_company_members_path do %>
    <div class="results">
      <%= render "users" %>
    </div>
    <%= submit_tag t("add_member"), class: "btn btn-primary" %>
  <% end %>
</div>
<div class="block full">
  <div class="block-title">
    <h2><strong><%= t ".all_member" %></strong></h2>
  </div>
  <table class="table table-striped table-vcenter">
    <thead>
      <tr>
        <th><%= t ".name" %></th>
        <th><%= t "position" %></th>
        <th><%= t ".email" %></th>
        <th><%= t ".sex" %></th>
        <th><%= t ".start_time" %></th>
        <th><%= t ".end_time" %></th>
        <th><%= t "action" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "member", collection: @members, as: :member  %>
    </tbody>
  </table>

  <div class="modal fade" id="memberEdit">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t "edit_member" %></h4>
        </div>
        <div class="modal-body" id="form_edit_member">
          <%= render "form" %>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @members %>
</div>

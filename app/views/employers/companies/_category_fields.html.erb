<div class="nested-fields">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-11 padding_left_none">
        <div class="col-sm-12">
          <div class="row">
            <div class="col-sm-6 form-group">
              <%= f.label :name, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :name, placeholder: t("name"), class: "form-control" %>
                <%= f.error :name, class: "error-message" %>
              </div>
            </div>
            <div class="col-sm-6 form-group">
              <%= f.label :status, class: "control-label" %>
              <div class="controls">
                <div class="controls">
                  <% Category.statuses.keys.each do |status| %>
                    <%= f.radio_button :status, status %>
                    <%= f.label status.to_sym %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12 form-group">
              <%= f.label :description, class: "control-label" %>
              <div class="controls">
                <%= f.text_area :description, cols: Settings.employers.company.text_area_cols,
                  rows: Settings.employers.company.text_area_rows,
                  placeholder: t("description"), class: "form-control" %>
                <%= f.error :description, class: "error-message" %>
              </div>
            </div>
          </div>
          <hr class="custom_hr" />
        </div>
      </div>
      <div class="col-md-1">
        <% if has_owner_job @category_id_owner_jobs, f.object.id %>
          <a href="#" class="btn btn-danger btn-sm not-active" disabled="disabled" >
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          </a>
        <% else %>
          <%= link_to_remove_association  f, class: "btn btn-danger btn-sm" do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

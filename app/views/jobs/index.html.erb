<% provide(:title, t("company")) %>
<% provide(:banner, t("banner_show")) %>

<div class="tab-pane active">
  <section id="home" class="cp_tab_content cp_herro_banner">
    <%= show_banner(yield(:banner)) %>
    <%= render "filter_form" %>
  </section>
</div>
<section class="cp_basic_info info_company">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 cp_logo  mobile-hide">
        <div><%= image_tag(@company.logo.url) %></div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 cp_basic_info_details">
        <h2 id="cp_company_name" ><%= @company.name %></h2>
        <ul>
          <li>
            <span class="li-items-limit" title="<%= @company.address %>">
              <%= @company.address %>
            </span>
            <span class="line">|</span>
            <%= link_to t("framgia_recruit"), @company.url_company, class: "website-company"  %></li>
          </li>

          <li><span class="li-items-limit" title="<%= @company.majors %>"><%= @company.majors %></span>
          </ul>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 cp_follow_survey text-right">
          <%= link_to t("follow"), "", class: "btn-animation follow-company" %>
        </div>
      </div>
    </div>
  </section>
<div class="cp_tab_content cp_our_jobs_section">
  <div class="container">
    <div class="panel-group">
      <div class="panel panel-default">
          <div id="jobsListing" class="panel-collapse cp_our_jobs_container collapse in" aria-expanded="true" style="">
          <div class="panel-body">
            <div class="cp_our_jobs_listing" id="ajax_cp_our_jobs_listing">
              <div class = show_companies>
                <div class="row">
                  <% if can? :update, @company %>
                    <div class="create-job-modal">
                      <button type="button" class="btn btn-info btn-lg post-job" id="post-job-btn"
                        data-toggle="modal" data-target="#JobModal">
                        <%= t "post_job" %>
                      </button>
                      <div class="modal fade" id="JobModal" role="dialog">
                        <div class="modal-dialog job-modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title"><%= t "post_job" %></h4>
                            </div>
                            <div class="modal-body" id="job-create-form">
                              <%= render "jobs/form" %>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">
                                <%= t ".close" %>
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <div class="col-md-12 col-md-offset-0 show_jobs">
                    <% if @jobs.any? %>
                      <h3 class="jobs-count">
                        <%= t ".jobs" %>
                        <span id="jobs-numbers"><%= @jobs.total_count %></span>
                      </h3>
                      <div id="jobs">
                        <%= render @jobs %>
                      </div>
                    <% else %>
                      <h3><%= t ".jobs" %></h3>
                      <div id="jobs">
                        <div class="no_jobs"><%= t".no_jobs" %></div>
                      </div>
                    <% end %>
                    <div class = "row text-center pag">
                      <%= paginate @jobs %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
